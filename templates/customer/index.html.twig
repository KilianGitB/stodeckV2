{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <div class="justify-content-center mt-5 pt-5 container-fluid col-6">
        <h1>Client</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.address }}</td>
                    <td>
                        <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun client</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_customer_new') }}">Ajouter un client</a>
    </div>
{% endblock %}
