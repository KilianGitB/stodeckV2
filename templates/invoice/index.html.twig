{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <div class="justify-content-center mt-5 pt-5 container-fluid col-6">

        <h1>Facture</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.id }}</td>
                    <td>{{ invoice.name }}</td>
                    <td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_invoice_pdf', {'id': invoice.id}) }}">PDF</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune facture</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
