{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Date_added</th>
                <td>{{ article.dateAdded ? article.dateAdded|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Destocking_date</th>
                <td>{{ article.destockingDate ? article.destockingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Serial_number</th>
                <td>{{ article.serialNumber }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ article.state ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
